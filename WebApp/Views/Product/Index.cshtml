@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ViewModel.Common
@model PagedResult<ViewModel.Product.ProductVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">


    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="col-form-label" for="product_name">Tên sản phẩm</label>
                    <input type="text" id="product_name" name="product_name" value="" placeholder="Product Name" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label class="col-form-label" for="price">Giá</label>
                    <input type="text" id="price" name="price" value="" placeholder="Price" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label class="col-form-label" for="quantity">Số lượng</label>
                    <input type="text" id="quantity" name="quantity" value="" placeholder="Quantity" class="form-control">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="col-form-label" for="status">Status</label>
                    <select name="status" id="status" class="form-control">
                        <option value="1" selected>Enabled</option>
                        <option value="0">Disabled</option>
                    </select>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>

                                <th data-toggle="true">Tên</th>
                                <th data-toggle="phone">Hình ảnh</th>
                                <th data-hide="all">Mô tả</th>
                                <th data-toggle="phone,tablet">Số lượng</th>
                                <th data-toggle="phone">Đơn giá</th>
                                <th data-hide="phone,tablet">Đơn vị tính</th>

                                <th class="text-right" data-sort-ignore="true">Chọn</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.data)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.picture)
                                </td>
                                <td>
                                    Mô tả
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.unit)
                                </td>
                                <td>
                                    <span class="label label-primary">Enable</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.id }, new { @class = "btn btn-success" })
                                </td>
                                <td>
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
                                </td>
                                
                            </tr>

                             }

                            </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>
<!-- Custom and plugin javascript -->
<script src="js/inspinia.js"></script>
<script src="js/plugins/pace/pace.min.js"></script>

<!-- FooTable -->
<script src="js/plugins/footable/footable.all.min.js"></script>

<!-- Page-Level Scripts -->
<script>
    $(document).ready(function () {

        $('.footable').footable();

                            });</script>

